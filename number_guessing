# number_guessing.py

import random

number = random.randint(1, 10)
chances = 3

print("ğŸ¯ Welcome to the Number Guessing Game!")
print("I'm thinking of a number between 1 and 10.")
print(f"You have {chances} chances. Let's begin!")

while chances > 0:
    try:
        guess = int(input("Guess the number: "))
    except ValueError:
        print("âš ï¸ Please enter a valid number.")
        continue

    if guess == number:
        print("ğŸ‰ Correct! You guessed it!")
        break
    else:
        chances -= 1
        if chances > 0:
            print(f"âŒ Wrong! Try again. {chances} chances left.")
        else:
            print(f"ğŸ’€ Game Over! The correct number was {number}.")
