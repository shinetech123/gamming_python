import pygame
import random

# Initialize pygame
pygame.init()

# Set up display
WIDTH, HEIGHT = 700, 800
win = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("ðŸŽ Fruit Catcher Game")

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
BROWN = (139, 69, 19)
RED = (255, 0, 0)

# Basket settings
basket_width = 100
basket_height = 15
basket_x = WIDTH // 2
basket_y = HEIGHT - basket_height - 10
basket_speed = 10

# Fruit settings
fruit_radius = 15
fruit_x = random.randint(fruit_radius, WIDTH - fruit_radius)
fruit_y = 0
fruit_speed = 7

# Score and lives
score = 0
lives = 3

# Font
font = pygame.font.SysFont("comicsansms", 24)
clock = pygame.time.Clock()

# Game loop
running = True
while running:
    clock.tick(30)
    win.fill(WHITE)

    # Events
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Move basket
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and basket_x > 0:
        basket_x -= basket_speed
    if keys[pygame.K_RIGHT] and basket_x < WIDTH - basket_width:
        basket_x += basket_speed

    # Move fruit
    fruit_y += fruit_speed

    # Draw basket
    pygame.draw.rect(win, BROWN, (basket_x, basket_y, basket_width, basket_height))

    # Draw fruit
    pygame.draw.circle(win, RED, (fruit_x, fruit_y), fruit_radius)

    # Collision (fruit inside basket area)
    if (basket_y < fruit_y + fruit_radius < basket_y + basket_height) and \
       (basket_x < fruit_x < basket_x + basket_width):
        score += 1
        fruit_x = random.randint(fruit_radius, WIDTH - fruit_radius)
        fruit_y = 0

    # Missed fruit
    if fruit_y > HEIGHT:
        lives -= 1
        fruit_x = random.randint(fruit_radius, WIDTH - fruit_radius)
        fruit_y = 0

    # Score and Lives display
    score_text = font.render(f"Score: {score}", True, BLACK)
    lives_text = font.render(f"Lives: {lives}", True, RED)
    win.blit(score_text, (10, 10))
    win.blit(lives_text, (WIDTH - 120, 10))

    # Game Over
    if lives <= 0:
        game_over_text = font.render("ðŸ’€ Game Over! Press ESC to quit.", True, BLACK)
        win.blit(game_over_text, (WIDTH // 6, HEIGHT // 2))
        pygame.display.update()
        while True:
            event = pygame.event.wait()
            if event.type == pygame.QUIT:
                running = False
                break
            if event.type == pygame.KEYDOWN and event.key == pygame.K_ESCAPE:
                running = False
                break
    else:
        pygame.display.update()

pygame.quit()
